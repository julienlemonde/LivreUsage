@model WebApplication2.Models.CoopViewModel
@{
    ViewBag.Title = "Ajouter votre Coopérative";
}

<h2>@ViewBag.Title.</h2>

@using (Html.BeginForm("RegisterCoop", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4>Ajouter les informations ci-dessous sur votre coopérative.</h4>
    <hr />
    @Html.ValidationSummary()
    
    <div class="form-group">
        @Html.LabelFor(m => m.Name, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Adresse, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.PasswordFor(m => m.Adresse, new { @class = "form-control" })
        </div>
    </div>
    



    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="S'enregistrer" />
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

