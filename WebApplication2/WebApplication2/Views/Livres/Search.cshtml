@model WebApplication2.Models.Livres

@{
    ViewBag.Title = "Search";
}

<h2>Recherche d'un livre dans le système</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        
        <hr />
        @Html.ValidationSummary(true)
        

        <div class="form-group">
            @Html.LabelFor(model => model.CodeIdentification, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.CodeIdentification, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.CodeIdentification)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Rechercher Livre" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Retour à la page principal", "Index", "Home", new { }, new { @class = "btn btn-default" })
</div>
