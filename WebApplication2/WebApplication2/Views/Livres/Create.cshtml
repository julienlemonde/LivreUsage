@model WebApplication2.Models.Livres

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Livres</h4>
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(m => m.Id)
        <div class="form-group">
            @Html.LabelFor(model => model.CodeIdentification, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.CodeIdentification, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.CodeIdentification)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Nom, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.Nom, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Nom)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Auteur, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.Auteur, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Auteur)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.NbrPages, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.NbrPages, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.NbrPages)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Prix, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.Prix, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Prix)
            </div>
        </div>


       
        <div class="form-group">
            @Html.LabelFor(m => m.IdCoop, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.DropDownListFor(m => m.IdCoop, ViewBag.ChoixCoop as IEnumerable<SelectListItem>, new { @class = "form-control" })
            </div>
        </div>
            


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

