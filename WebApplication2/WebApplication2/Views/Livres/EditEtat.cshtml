@model WebApplication2.Models.LivreInventaire


@{
    ViewBag.Title = "Ajout de l'état du livre";
}

<h2>Edit</h2>

@using (Html.BeginForm())
{

    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Livres</h4>
        <hr />
        @Html.ValidationSummary(true)
       
        <div class="form-group">
            @Html.LabelFor(model => model.CodeIdentification, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DisplayFor(model => model.CodeIdentification)
                @Html.ValidationMessageFor(model => model.CodeIdentification)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Etat, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
            @Html.TextBoxFor(m => m.Etat, new { @class = "form-control" })
               <!-- Html.DropDownListFor(model => model.ValeurDesEtats, (SelectList)ViewBag.selectList)-->
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ContinuerAjout, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.CheckBoxFor(model => model.ContinuerAjout)
                @Html.ValidationMessageFor(model => model.ContinuerAjout)
            </div>
        </div>
        @Html.HiddenFor(m => m.CodeIdentification)

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Confirmer le changement" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
