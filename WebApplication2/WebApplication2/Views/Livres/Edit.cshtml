@model WebApplication2.Models.Livres


@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

@using (Html.BeginForm())
{

    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Livres</h4>
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.Id)

        <div class="form-group">
            @Html.LabelFor(model => model.Nom, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Nom)
                @Html.ValidationMessageFor(model => model.Nom)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Auteur, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Auteur)
                @Html.ValidationMessageFor(model => model.Auteur)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.NbrPages, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.NbrPages)
                @Html.ValidationMessageFor(model => model.NbrPages)
            </div>
        </div>
       
        <div class="form-group">
            @Html.LabelFor(model => model.Prix, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @if (User.IsInRole("Gestionnaire"))
                       {
                         @Html.EditorFor(model => model.Prix)
                         @Html.ValidationMessageFor(model => model.Prix)
                        }
                @if(User.IsInRole("Etudiant"))
                {
                    @Html.DisplayFor(model => model.Prix)
                }
            </div>
        </div>
        

       
        @Html.HiddenFor(model => model.CodeIdentification)
        

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Confirmer le changement" class="btn btn-default" />
            </div>
        </div>
    </div>
}


<div>
    @Html.ActionLink("Back to List", "Index")
</div>
